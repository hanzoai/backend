{
  "name": "@hanzo/api",
  "description": "Cloud Run instance for deploying Hanzo's backend functionality",
  "version": "1.9.3",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon",
    "test": "mocha test/index.test.js --exit",
    "system-test": "NAME=Cloud mocha test/system.test.js --timeout=180000",
    "lint": "eslint '**/*.js'",
    "fix": "eslint --fix '**/*.js'",
    "build": "tsc;cpy --cwd=src --parents '**/*.json' ../build/",
    "deploy": "./deploy.sh --project"
  },
  "engines": {
    "node": "18"
  },
  "author": "Hanzo Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/logging": "^11.1.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "algoliasearch": "^4.24.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "cpy-cli": "^5.0.0",
    "express": "^4.17.1",
    "file-type": "^19.3.0",
    "firebase-admin": "^12.2.0",
    "firebase-functions": "^5.0.1",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "sucrase": "^3.31.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "20.14.11",
    "firebase-tools": "^13.13.3",
    "google-auth-library": "^9.1.1",
    "js-beautify": "^1.13.0",
    "mocha": "^10.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
